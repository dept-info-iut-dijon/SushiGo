<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Importation de la Police -->
    <FontFamily x:Key="NewSushi">/UI_Layer;component/Assets/Fonts/New_Sushi.ttf</FontFamily>
    

    <Style x:Key="Font1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource NewSushi}" />
        <Setter Property="FontSize" Value="50" />
        <Setter Property="Foreground" Value="{StaticResource WhiteSmokeBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="Font2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource NewSushi}" />
        <Setter Property="FontSize" Value="44" />
        <Setter Property="Foreground" Value="{StaticResource NightBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

</ResourceDictionary>