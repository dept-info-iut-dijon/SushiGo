    <Page Remove="ViewModels\**" />
    <Page Remove="Views\**" />

    <None Remove="Assets\Cartes\baguettes.png" />
    <None Remove="Assets\Cartes\dessert.png" />
    <None Remove="Assets\Cartes\maki1.png" />
