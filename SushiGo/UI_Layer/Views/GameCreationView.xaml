<Window x:Class="UI_Layer.Views.GameCreationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_Layer.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" WindowState="Maximized"
        Title="GameCreationView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image
            Opacity="0.7"
            Stretch="Fill"
            Grid.ColumnSpan="4"
            Grid.RowSpan="11"
            Source="../Assets/test.png"/>
        
        <TextBlock 
            Text="Création de partie"
            FontSize="60"
            Foreground="White"
            Grid.Row="1"
            Grid.ColumnSpan="4"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <!-- Choisir le nb de joueurs -->
        <materialDesign:Card
            BorderThickness="2"
            BorderBrush="Black"
            Padding="2"
            Content="Nombre de joueurs"
            FontSize="20"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Foreground="White"
            Background="IndianRed"
            Grid.Row="3"
            Grid.Column="1"/>
        <Button
             BorderThickness="0"
            Margin="15"
            Style="{x:Null}"
            Content="1"
            Foreground="White"
            Background="IndianRed"
            FontWeight="Bold"
            Grid.Row="3"
            Grid.Column="2"
            ToolTip="MaterialDesignFlatPrimaryToggleButton" />
        
        <!-- Choisir les adversaires -->
        <materialDesign:Card
            Content="Joueur contre ordinateurs"
            FontSize="20"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Foreground="White"
            Background="IndianRed"
            Grid.Row="5"
            Grid.Column="1"/>
        <Button
            Margin="15"
            Style="{x:Null}"
            Content="J/O"
            Foreground="White"
            Background="IndianRed"
            materialDesign:ToggleButtonAssist.OnContent="J/J"
            FontWeight="Bold"
             BorderThickness="0"
            Grid.Row="5"
            Grid.Column="2"
            ToolTip="MaterialDesignFlatPrimaryToggleButton" />

        <!-- Choisir la difficulté -->
        <materialDesign:Card
            Content="Difficulté"
            FontSize="20"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Foreground="White"
            Background="IndianRed"
            Grid.Row="7"
            Grid.Column="1"/>
        <Button
            Margin="15"
            Style="{x:Null}"
            BorderThickness="0"
            Content="J/O"
            Foreground="White"
            Background="IndianRed"
            FontWeight="Bold"
            Grid.Row="7"
            Grid.Column="2"/>

        <!-- Créer la partie -->
        <Button
            Content="GO !"
            Foreground="Black"
            HorizontalAlignment="Center"
            BorderThickness="0"
            FontSize="20"
            VerticalAlignment="Center"
            Grid.Row="9"
            Width="200"
            Height="60"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Background="White"/>


    </Grid>
</Window>
